{
  "info": {
    "name": "F7LTD Restaurant Aggregator",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "health"
          ]
        }
      }
    },
    {
      "name": "Search by ZIP",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/search?zip=44113&radius_miles=10",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "search"
          ],
          "query": [
            {
              "key": "zip",
              "value": "44113"
            },
            {
              "key": "radius_miles",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Get Restaurant",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/restaurants/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "restaurants",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Force Refresh (private)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{privateApiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/refresh/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "refresh",
            ":id"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "apiKey",
      "value": "public_readonly_key"
    },
    {
      "key": "privateApiKey",
      "value": "secret_key_1"
    }
  ]
}
